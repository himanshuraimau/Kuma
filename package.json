{
    "name": "kuma",
    "version": "1.0.0",
    "description": "Kuma - AI-powered personal assistant",
    "private": true,
    "scripts": {
        "dev": "bun run --filter backend dev & bun run --filter frontend dev",
        "dev:backend": "cd backend && bun run dev",
        "dev:frontend": "cd frontend && bun run dev",
        "build": "bun run build:backend && bun run build:frontend",
        "build:backend": "cd backend && bun run build",
        "build:frontend": "cd frontend && bun run build",
        "db:generate": "cd backend && bun run db:generate",
        "db:push": "cd backend && bun run db:push",
        "db:studio": "cd backend && bun run db:studio",
        "install:all": "cd backend && bun install && cd ../frontend && bun install"
    },
    "workspaces": [
        "backend",
        "frontend"
    ],
    "devDependencies": {},
    "engines": {
        "node": ">=18.0.0",
        "bun": ">=1.0.0"
    }
}