// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  chats     Chat[]
  userTools UserTool[]
  userApps  UserApp[]

  @@map("users")
}

model Chat {
  id        String   @id @default(uuid())
  userId    String
  title     String?
  agentType String   @default("router") // router, financial, stock-market, etc.
  threadId  String   @unique // LangGraph thread_id for memory
  summary   String?  @db.Text // Summary of older messages for context
  summarizedUpTo Int @default(0) // Number of messages that have been summarized
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages Message[]

  @@index([userId])
  @@index([threadId])
  @@map("chats")
}

model Message {
  id        String   @id @default(uuid())
  chatId    String
  role      String   // user, assistant, tool, system
  content   String   @db.Text
  toolCalls Json?    // Store tool calls if any
  createdAt DateTime @default(now())

  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@index([chatId])
  @@map("messages")
}

model Agent {
  id          String   @id @default(uuid())
  name        String   @unique // financial, stock-market, productivity, etc.
  displayName String
  description String   @db.Text
  systemPrompt String  @db.Text
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("agents")
}

model Tool {
  id          String   @id @default(uuid())
  name        String   @unique // read_emails, create_issue, get_stock_price, etc.
  category    String   // gmail, github, stock-market, calendar, slack
  displayName String
  description String   @db.Text
  requiresAuth Boolean @default(false) // Does this tool need OAuth/API key?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("tools")
}

model UserTool {
  id           String   @id @default(uuid())
  userId       String
  toolCategory String   // gmail, github, stock-market, etc.
  credentials  Json     // Encrypted OAuth tokens or API keys
  isConnected  Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, toolCategory])
  @@index([userId])
  @@map("user_tools")
}

model App {
  id          String   @id @default(uuid())
  name        String   @unique // gmail, calendar, github, etc.
  category    String   // communication, productivity, development
  displayName String
  description String   @db.Text
  icon        String?  // Emoji or icon identifier
  authType    String   // oauth2, api_key, none
  isActive    Boolean  @default(true)
  config      Json     @default("{}") // OAuth config, scopes, etc.
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userApps UserApp[]

  @@map("apps")
}

model UserApp {
  id          String    @id @default(uuid())
  userId      String
  appId       String
  credentials Json      // Encrypted OAuth tokens/API keys
  metadata    Json?     // Connected email, account info, etc.
  isConnected Boolean   @default(true)
  lastSyncAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  app  App  @relation(fields: [appId], references: [id], onDelete: Cascade)

  @@unique([userId, appId])
  @@index([userId])
  @@index([appId])
  @@map("user_apps")
}
